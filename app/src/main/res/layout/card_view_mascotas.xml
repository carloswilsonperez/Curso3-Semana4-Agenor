<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    card_view:cardCornerRadius="4dp"

    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:elevation="5dp"
            >

            <ImageView
                android:id="@+id/imgMascota"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@drawable/m1"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:padding="7dp"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"
                 android:padding="10dp"
                android:elevation="15dp"
                >

                <ImageButton
                    android:id="@+id/ibHuesoRaiting"
                    android:layout_width="@dimen/imageBiton"
                    android:layout_height="@dimen/imageBiton"
                    android:src="@drawable/bone"
                    android:background="@color/colorPrimary"

                    />

                <TextView
                    android:id="@+id/tvNombreMascota"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/nombreMascota"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="30dp"


                    />


                <TextView
                    android:id="@+id/tvContador"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:background="@color/colorPrimary"
                    android:textSize="25sp"
                    android:layout_marginLeft="65dp"
                    android:textColor="#FFF"

                    />

                <ImageButton
                    android:id="@+id/ibRaiting"
                    android:layout_width="@dimen/imageBiton"
                    android:layout_height="@dimen/imageBiton"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/bone2"
                    android:layout_marginLeft="2dp"

                    />



                    />



            </LinearLayout>




        </LinearLayout>


</android.support.v7.widget.CardView>